{
  "name": "zebar-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --continue",
    "format": "prettier --write \"**/*.{ts,tsx,md,html,json,js,scss}\" && turbo run format"
  },
  "prettier": "@glzr/style-guide/prettier",
  "dependencies": {},
  "devDependencies": {
    "@glzr/style-guide": "1.0.0",
    "prettier": "3.1.1",
    "turbo": "1.9.3"
  },
  "packageManager": "pnpm@8.14.1",
  "engines": {
    "node": ">=14.0.0"
  }
}
