{
  "$schema": "node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "devPath": "http://localhost:4200",
    "distDir": "../frontend/dist"
  },
  "package": {
    "productName": "tauri",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "open": true
      },
      "window": {
        "setPosition": true,
        "setSize": true,
        "setAlwaysOnTop": true,
        "setSkipTaskbar": true,
        "setResizable": true
      }
    },
    "cli": {
      "description": "Command example `sub1 sub2`",
      "subcommands": {
        "sub1": {
          "subcommands": {
            "sub2": {}
          }
        }
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "glazer.zanbar",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": ["resources/*"]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "transparent": true,
        "decorations": false,
        "title": "Zanbar",
        "width": 1,
        "height": 1
      }
    ]
  }
}
