{
  "$schema": "node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "devUrl": "http://localhost:4200",
    "frontendDist": "../client/dist"
  },
  "productName": "Zebar",
  "version": "0.0.0",
  "identifier": "com.glzr.zebar",
  "plugins": {
    "shell": {
      "open": true
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["resources/*"],
    "targets": ["deb", "appimage", "msi", "dmg", "updater"]
  },
  "app": {
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  }
}
